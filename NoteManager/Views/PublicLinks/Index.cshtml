@using NoteManager.Models.ViewModels
@model IEnumerable<PublicLinkIndexModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @* <a asp-action="Create">Create New</a> *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.NoteObj) *@
                Note Title
            </th>
            <th>link</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (PublicLinkIndexModel item in Model)
        {
        <tr>
